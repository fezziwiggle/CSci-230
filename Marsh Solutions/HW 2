#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct data {
   char brand[20];
   float engine;
   int miles;
   char color[20];
} temp;

int scan(void) {
int size = 0;
FILE *data;
   data = fopen("./hw2.data", "r");
   while (1) {
      fscanf(data, "%s %f %d %s", temp.brand, &temp.engine, &temp.miles, temp.color);
      if (feof(data)) break;
      size++;
   }
   return size;
}

void load(int size, struct data autos[]) {
int i;
FILE *data;
   data = fopen("./hw2.data", "r");
   for (i = 0; i < size; i++) {
      fscanf(data, "%s %f %d %s", autos[i].brand, &autos[i].engine, &autos[i].miles, autos[i].color);
   }
}

void sortf(int size, struct data autos[]) {
int i, swapped;
   do {               
      swapped = 0; 
      for (i = 0; i < size-1; i++) {
          if (autos[i].engine > autos[i+1].engine) {
             temp       = autos[i];               
             autos[i]   = autos[i+1];
             autos[i+1] = temp;
             swapped = 1; 
          }                 
      }         
    } while (swapped);
}

void sorti(int size, struct data autos[]) {
int i, swapped;
   do {               
      swapped = 0; 
      for (i = 0; i < size-1; i++) {
          if (autos[i].miles > autos[i+1].miles) {
             temp       = autos[i];               
             autos[i]   = autos[i+1];
             autos[i+1] = temp;
             swapped = 1; 
          }                 
      }         
   } while (swapped);
}

void printhl(int size, struct data autos[]) {
int i;
   for (i = size-1; i >= 0; i--) {
       printf("%s %f %d %s\n", autos[i].brand, autos[i].engine, autos[i].miles, autos[i].color);
   }
}

void printlh(int size, struct data autos[]) {
int i;
   for (i = 0; i < size; i++) {
       printf("%s %f %d %s\n", autos[i].brand, autos[i].engine, autos[i].miles, autos[i].color);
   }
}

int main(void) {
int size;
char option;
struct data autos[100];
    while (1) {
       printf("MENU\n");
       printf("1] Sort by float & print hi to lo.\n");
       printf("2] Sort by float & print lo to hi.\n");
       printf("3] Sort by int   & print hi to lo.\n");
       printf("4] Sort by int   & print lo to hi.\n");
       printf("5] Exit.\n");
       scanf("%c", &option);
       switch (option) {
          case '1': 
            size = scan();
            load(size, autos);
            sortf(size, autos);
            printhl(size, autos);
            break;
          case '2': 
            size = scan();
            load(size, autos);
            sortf(size, autos);
            printlh(size, autos);
            break;
          case '3': 
            size = scan();
            load(size, autos);
            sorti(size, autos);
            printhl(size, autos);
            break;
          case '4': 
            size = scan();
            load(size, autos);
            sorti(size, autos);
            printlh(size, autos);
            break;
          case '5':
             exit(1); 
       }
    }
}
