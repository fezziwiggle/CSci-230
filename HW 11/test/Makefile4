CC=gcc

CFLAGS=-c -fpic -Wall


all: hw11-A-MaezyHaldeman.o hw11-B-MaezyHaldeman.o hw11-C-MaezyHaldeman.o hw11-D-MaezyHaldeman.o hw11-lib-MaezyHaldeman.so
	$(CC) hw11-MaezyHaldeman-4.c -ldl -o myProg

