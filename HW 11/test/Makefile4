	$(CC) $(CFLAGS) hw11-B-MaezyHaldeman.c

hw11-C-MaezyHaldeman.o: hw11-C-MaezyHaldeman.c
	$(CC) $(CFLAGS) hw11-C-MaezyHaldeman.c

hw11-D-MaezyHaldeman.o: hw11-D-MaezyHaldeman.c
	$(CC) $(CFLAGS) hw11-D-MaezyHaldeman.c

hw11-lib-MaezyHaldeman.so: hw11-A-MaezyHaldeman.o hw11-B-MaezyHaldeman.o hw11-C-MaezyHaldeman.o hw11-D-MaezyHaldeman.o
	gcc -shared -fpic hw11-A-MaezyHaldeman.o hw11-B-MaezyHaldeman.o hw11-C-MaezyHaldeman.o hw11-D-MaezyHaldeman.o -o hw11-lib-MaezyHaldeman.so

clean:
